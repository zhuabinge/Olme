<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kubang.olme.activity">
    <!--使用网络功能所需权限  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>

    <application
        android:name="com.kubang.olme.application.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kubang.olme.activity.MainActivity_"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemInfoActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <!-- 登陆、注册 -->
        <activity
            android:name=".LoginActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity
            android:name=".RegisterActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <!-- 个人中心 -->
        <activity
            android:name=".OrderRecordActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity
            android:name=".MyQuestionActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity
            android:name=".MyCollectionActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity
            android:name=".PersonalInfoActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <activity
            android:name=".AnswerDetailActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <!-- 退出登陆窗口 -->

        <activity
            android:name=".LogoutActivity_"
            android:theme="@style/MyDialog"></activity>

        <!-- 订单详情 -->
        <activity
            android:name=".OrderDetailActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <!-- 发布主题 -->
        <activity
            android:name=".AddThemeActivity_"
            android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

        <!-- 修改个人资料 -->
        <activity
            android:name=".ModifyBirthdayActivity_"
            android:theme="@style/MyDialog"></activity>
        <activity
            android:name=".ModifyHeadPhotoActivity_"
            android:theme="@style/MyDialog"></activity>
        <activity
            android:name=".ModifyNameActivity_"
            android:theme="@style/MyDialog"></activity>
        <activity
            android:name=".ModifySexActivity_"
            android:theme="@style/MyDialog"></activity>
        <activity
            android:name=".ModifyAddressActivity_"
            android:theme="@style/MyDialog"></activity>
        <activity
            android:name=".ModifyPhoneActivity_"
            android:theme="@style/MyDialog"></activity>

        <!-- 评论 -->
        <activity
            android:name=".ReplyActivity_"
            android:theme="@style/MyDialog"></activity>
    </application>

</manifest>
